{
  "name": "Project Toolbar",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Toolbar for email",
  "homepage_url": "http://sravan.us",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.live.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.live.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
